function shortWait()
	local counter = 0
	while counter < 10 do 
		emu.frameadvance()
		counter = counter + 1
	end
end

function makeAttack(attackNumber)
	client.clearautohold()
	joypad.set({A=1})			--enter the attack screen
	shortWait()	
	
	if (attackNumber == 2)	then		--select attack 2
		client.clearautohold()		
		joypad.set({Down = 1})
		shortWait()
	end
	if (attackNumber == 3) then		--select attack 3
		client.clearautohold()
		joypad.set({Down = 1})
		shortWait()
		client.clearautohold()
		joypad.set({Down = 1})
		shortWait()
	end

	client.clearautohold()
	joypad.set({A = 1})			--execute selected attack
	shortWait()
end

local rand = math.random(3)
makeAttack(rand)
